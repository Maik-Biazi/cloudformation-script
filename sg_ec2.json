{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "MySecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Meu Security Group",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 443,
                        "ToPort": 443,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22,
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        },
        "MyInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-022e1a32d3f742bd8", 
                "InstanceType": "t2.micro", 
                "SecurityGroupIds": [
                    { "Ref": "MySecurityGroup" }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "MinhaInstancia"
                    }
                ],
                "KeyName": "LinuxWordpress", 
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "echo 'Hello, World!' > /var/www/html/index.html\n"
                            ]
                        ]
                    }
                },
                "AssociatePublicIpAddress": true
            }
        }
    }
}